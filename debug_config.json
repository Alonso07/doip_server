{
  "debug": {
    "enabled": true,
    "log_level": "DEBUG",
    "log_file": "doip_client_debug.log",
    "verbose_output": true
  },
  "server": {
    "host": "127.0.0.1",
    "port": 13400,
    "timeout": 5.0,
    "retry_attempts": 3,
    "retry_delay": 1.0
  },
  "client": {
    "logical_address": "0x0E00",
    "target_address": "0x1000",
    "auto_reconnect": true,
    "connection_timeout": 10.0
  },
  "uds_services": {
    "diagnostic_session_control": {
      "enabled": true,
      "session_type": "0x03",
      "description": "Extended diagnostic session"
    },
    "read_data_by_identifier": {
      "enabled": true,
      "data_identifiers": [
        "0xF187",
        "0xF188", 
        "0xF189",
        "0xF190"
      ],
      "description": "Read various data identifiers"
    },
    "routine_control": {
      "enabled": true,
      "routine_identifier": "0x0202",
      "routine_type": "0x0001",
      "description": "Start routine activation"
    },
    "tester_present": {
      "enabled": true,
      "suppress_response": true,
      "description": "Keep session alive"
    }
  },
  "test_scenarios": [
    {
      "name": "basic_connection_test",
      "description": "Test basic DoIP connection and alive check",
      "steps": [
        "connect",
        "alive_check",
        "disconnect"
      ]
    },
    {
      "name": "uds_communication_test", 
      "description": "Test UDS service communication",
      "steps": [
        "connect",
        "diagnostic_session_control",
        "read_data_by_identifier",
        "routine_control",
        "tester_present",
        "disconnect"
      ]
    },
    {
      "name": "error_handling_test",
      "description": "Test error handling and recovery",
      "steps": [
        "connect",
        "invalid_uds_request",
        "reconnect",
        "valid_uds_request",
        "disconnect"
      ]
    }
  ],
  "expected_responses": {
    "alive_check": {
      "success_pattern": "02fd0002",
      "description": "Alive check response"
    },
    "diagnostic_session_control": {
      "success_pattern": "50",
      "description": "Positive response to session control"
    },
    "read_data_by_identifier": {
      "success_pattern": "62",
      "error_pattern": "7F22",
      "description": "Read data response or error"
    },
    "routine_control": {
      "success_pattern": "71",
      "error_pattern": "7F31", 
      "description": "Routine control response or error"
    },
    "tester_present": {
      "success_pattern": "7E",
      "description": "Tester present response"
    }
  }
}
